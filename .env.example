# =====================================================
# GLOBAL MODES (Kill Switches)
# =====================================================
DEMO_MODE=true
AUTH_ENABLED=false
RAG_SELECTION_ENABLED=true

# =====================================================
# OpenAI / ChatKit (RAG + Chat)
# =====================================================
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_CHATKIT_WORKFLOW_ID=your-workflow-id-here   # optional

# =====================================================
# Qdrant Cloud (Vector Database)
# =====================================================
QDRANT_URL=https://your-qdrant-cluster-url
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION=physical_ai_textbook

# =====================================================
# FastAPI Backend
# =====================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_BASE_URL=http://localhost:8000
BACKEND_ALLOWED_ORIGINS=["http://localhost:3000"]

# =====================================================
# Auth Server (BetterAuth)
# =====================================================
AUTH_BASE_URL=http://localhost:3005
AUTH_SERVER_URL=http://localhost:3005
AUTH_TRUSTED_ORIGINS=["http://localhost:3000"]
